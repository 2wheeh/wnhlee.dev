---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { BackToTop } from "@components/react/BackToTop";
import { DownloadToPdf } from "@components/react/DownloadToPdf";
import Layout from "@layouts/Layout.astro";
---

<Layout title={`About | ${SITE.title}`} ogImage={`/about/og.png`} scrollSmooth>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose mb-28 max-w-3xl prose-img:border-0">
      <slot />
    </section>

    <div
      class="mx-auto flex max-w-3xl flex-row-reverse justify-between p-8 print:hidden"
    >
      <!-- <DownloadToPdf client:load /> -->
      <BackToTop client:load />
    </div>
  </main>
  <Footer />
</Layout>
